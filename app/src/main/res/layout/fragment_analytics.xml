<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".Analytics">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg"
        android:paddingTop="32dp">

        <TextView
            android:id="@+id/labelAnalytics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ANALYTICS"
            android:textSize="24sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAnalytics"
            android:layout_width="0dp"
            android:layout_height="340dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelAnalytics"
            app:layout_constraintVertical_bias="0.0" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/cardAnalytics"
            app:layout_constraintBottom_toBottomOf="@+id/cardAnalytics"
            app:layout_constraintEnd_toEndOf="@+id/cardAnalytics"
            app:layout_constraintStart_toStartOf="@+id/cardAnalytics"
            android:elevation="5dp"
            app:layout_constraintDimensionRatio="1.3:1"> <!-- Adjust ratio as needed -->
        </com.github.mikephil.charting.charts.PieChart>

        <TextView
            android:id="@+id/labelStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="STATS"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardAnalytics"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardStats"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelStats"
            app:layout_constraintVertical_bias="0.0" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/LongestStreak"
                    android:layout_width="124dp"
                    android:layout_height="116dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/trophylongest" />

                <TextView
                    android:id="@+id/LongestStreakNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/LongestStreak"
                    android:layout_alignEnd="@+id/LongestStreak"
                    android:layout_alignBottom="@+id/LongestStreak"
                    android:layout_alignTop="@+id/LongestStreak"
                    android:layout_marginTop="23dp"
                    android:elevation="10dp"
                    android:padding="8dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="4"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/TextLongestStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="LONGEST STREAK!!!"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="-4"
                android:shadowDy="-4"
                android:shadowRadius="10"
                android:layout_marginTop="120dp"
                android:layout_marginStart="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/LoginStreakImg"
                    android:layout_width="125dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="190dp"
                    android:src="@drawable/login_streak" />

                <TextView
                    android:id="@+id/LoginStreakNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/LoginStreakImg"
                    android:layout_alignEnd="@+id/LoginStreakImg"
                    android:layout_alignBottom="@+id/LoginStreakImg"
                    android:layout_alignTop="@+id/LoginStreakImg"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="50dp"
                    android:elevation="10dp"
                    android:padding="8dp"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="4"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/TextLoginStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="CURRENT STREAK!!!"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="4"
                android:shadowDy="-4"
                android:shadowRadius="10"
                android:layout_marginTop="120dp"
                android:layout_marginStart="180dp" />


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
