<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" /> <!-- Set the desired border radius -->
            <solid android:color="#5cdb5c" /> <!-- Green color when checked/on -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp" /> <!-- Set the desired border radius -->
            <solid android:color="#ff0021" /> <!-- Red color when unchecked/off -->
        </shape>
    </item>
</selector>